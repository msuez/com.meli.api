{
  "compilerOptions": {
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": "." 
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts"
  ]
}
